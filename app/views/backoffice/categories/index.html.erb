<div id="page-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
            <br>
            <div class="col-lg-8">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            Categories
                        </div>
                        <!-- /.panel-heading -->
                        <div class="panel-body">
                            <div class="table-responsive">
                                <table class="table table-striped table-bordered table-hover">
                                    <thead>
                                        <tr>
                                            <th>ID</th>
                                            <th>Description</th>
                                            <th class="text-center" style="width: 41px"></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                    <% @categories.each do |category| %>
                                        <tr>
                                            <td><%= category.id %></td>
                                            <td><%= category.description %></td>
                                            <td>
                                                <%= link_to edit_backoffice_category_path(category.id), class: "btn btn-warning btn-circle" do %>
                                                    <i class="fa fa-pencil"></i>
                                            <% end %>
                                            </td>
                                        </tr>
                                    <% end %>
                                    </tbody>
                                </table>
                            </div>
                            <!-- /.table-responsive -->
                        </div>
                        <!-- /.panel-body -->
                    </div>
                    <!-- /.panel -->
                </div>
            <%= render partial: "backoffice/categories/shared/form", locals: {action: "New category"} %>
            </div>
        </div>
    </div>
</div>