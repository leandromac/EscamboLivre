<%= content_for :javascripts do %>
    <%= javascript_include_tag 'site/profile/ads' %>
<% end %>
<h1>Meus dados</h1>
<% if @profile_member.errors.any? %>
    <div class="alert alert-danger alert-dismissable">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
        <ul>
        <% @profile_member.errors.full_messages.each do |message| %>
            <li><%= message %></li>
        <% end %>
        </ul>
    </div>
<% end %>

<%= form_for(@profile_member, url: site_profile_my_datum_path(@profile_member)) do |f| %>
    <div class="row">
        <div class="col-md-7">
            <label>Primeiro nome</label>
            <div class="form-group">
                <%= f.text_field :first_name, class: 'form-control', placeholder: 'Primeiro nome...' %>
            </div>
        </div>
        <div class="col-md-7">
            <label>Sobrenome</label>
            <div class="form-group">
                <%= f.text_field :second_name, class: 'form-control', placeholder: 'Sobrenome...' %>
            </div>
        </div>
        <div class="col-md-7">
            <div class="form-group">
                <label>Aniversário</label>
                <%= f.text_field :birthdate, class: 'form-control datepicker', value: (l(@profile_member.birthdate) unless @profile_member.birthdate.blank?), placeholder: 'Aniversário' %>
            </div>
        </div>

    </div>

    <div class="form-group">
        <%= submit_tag "Salvar Anúncio", class: 'btn btn-primary' %>
    </div>
<% end %>