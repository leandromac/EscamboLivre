<h1>Meus anúncios</h1>
<table class="table table-hover">
    <thead>
        <tr>
            <th>#</th>
            <th>Imagem</th>
            <th>Título</th>
            <th>Categoria</th>
            <th>Preço</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        <% @ads.each do |ad| %>
        <tr>
            <td><%= ad.id%></td>
            <td><%= image_tag ad.picture(:thumb) %></td>
            <td><%= ad.title %><br><small class="text-muted"><%= ad.created_at %></small></td>
            <td><%= ad.category.description %></td>
            <td><%= humanized_money_with_symbol ad.price %></td>
            <td>
                <%= link_to edit_site_profile_ad_path(ad), class: 'btn btn-warning btn-sm' do %>
                    <span class="glyphicon glyphicon-pencil"></span>
                <% end %>
                <%= link_to '#', class: 'btn btn-danger btn-sm' do %>
                    <span class="glyphicon glyphicon-trash"></span>
                <% end %>
            </td>
        </tr>
        <% end %>
    </tbody>
</table>