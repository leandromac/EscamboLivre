<h1>Meus anúncios</h1>
<table class="table table-hover">
    <thead>
        <tr>
            <th>#</th>
            <th>Imagem</th>
            <th>Descrição</th>
            <th>Preço</th>
        </tr>
    </thead>
    <tbody>
        <% @ads.each do |ad| %>
        <tr>
            <td><%= ad.id%></td>
            <td><%= image_tag ad.picture(:thumb) %></td>
            <td><%= ad.description %></td>
            <td><%= humanized_money_with_symbol ad.price %></td>
        </tr>
        <% end %>
    </tbody>
</table>